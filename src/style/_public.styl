.public-layout
  display: flex
  flex-flow: column nowrap
  justify-content: space-between
  align-items: center
  height 100vh
  .public-logo-box
    width 100px
    margin-top: 11vh
    @media $small-only
      margin-top: 8vh
  .public-footer
    margin: 20px 0
    font-size: 13px
    color: $cgray2
    @media $small-only
      width: 100%
      padding: 0 20px
      text-align: center
  .public-content
    height 100%
    width: 400px
    margin-top: 40px
    text-align: center
    @media $small-only
      width: 100%
      padding: 0 20px
    .fb-button
      color: #ffffff
      background: $cfb
      padding: 8px 15px
      margin: 16px 0
      display: inline-block
      cursor: pointer
    .last-info-box
      font-weight: 500
      margin-top: 20px
      color: $cgray1
      a
        margin-left: 5px
    .signup-page
      .names-box
        display: flex
        flex-flow: row nowrap
        justify-content: space-between
        align-items: center
        div:first-child
          margin-right: 10px
        @media $small-only
          flex-flow: column nowrap
          div:first-child
            margin-right: 0px
      .create-account-box
        margin-top: 20px
    .forgot-page
    .reset-page
      .info-msg
        margin-bottom: 30px
        color: $cgray1
        text-align: left
      .action-box
        margin: 70px 0 30px 0
