// MAIN FIXES
.md-app
  height 100vh
.md-drawer
  width: 300px!important
.md-app-scroller
.md-app-content
  background: #F5F5F5 !important
  border-left: none
  box-shadow:  inset 5px 0 5px -5px $cgray2
sup 
  top: -.3em!important

.has-elevation-4
  box-shadow: 0 2px 4px -1px rgba(0,0,0,.2), 0 4px 5px 0 rgba(0,0,0,.14), 0 1px 10px 0 rgba(0,0,0,.12);

// COMMON PAGE WHITE
.common-page
  @extends .has-elevation-4;
  background: #ffffff
  padding: 16px
  margin-bottom: 16px;
  .title
    color: $cgray1
    font-weight: 500
  .title-info
    color: $cgray2
    font-size: 13px
    line-height: 1.4

// COMMON PLAYER INFO
.common-player-info
  text-align: center
  .md-avatar
    @extends .has-elevation-4;
    margin-bottom: 10px
  .name
    color: $cc1
    font-size: 16px
  .team
    color: $cgray2
    font-size: 14px
    line-height: 1
  


// LINKS
a, a:hover, a:visited, a:link, a:active, a > *
  text-decoration: none !important

// STEPPERS
.has-steppers
  background: #fff
  padding: 16px
  .md-title
    color: $cgray1
  .md-stepper-header.md-done
    .md-stepper-number .md-icon svg
      fill: #fff !important
.md-steppers
  .md-stepper-header
    .md-stepper-number
      background: $clblue !important
      color: #fff
    &.md-active
      .md-stepper-number
        color: #fff !important

// MD-CARD
.common-card
  padding: 16px 16px 10px 16px
  .actions
    text-align: center
    .md-button
      margin: 0

// MD-BUTTONS
.md-button
  .md-ripple
    padding: 0 14px
.md-button-content
  text-transform: none
// Light Blue button
.md-button.md-accent.lblue
  color $clblue
  &.md-raised
    background-color $clblue !important
  &[disabled]
    opacity: .4
    color: $cgray4

// MD-SWITCH
.md-switch.md-accent.lblue
  .md-switch-container
    background-color: $clblue2
  &.md-checked
    .md-switch-thumb
      background-color: $clblue

// MD-CHECKBOX
.md-checkbox
  label 
    line-height: 1.2
    text-align: left
.md-checkbox.md-accent.lblue
  &.md-checked
    .md-checkbox-container
      background-color: $clblue
      border-color: $clblue

// MD-INPUT
.md-field.md-disabled
  input 
    -webkit-text-fill-color: $cgray2!important
    color: $cgray2!important
  &:after
    background-color: $cgray3!important
    background-image: none!important

// MD-AVATAR MD-ICON
.md-avatar-icon .md-icon
  color: #fff!important

// MD-ICONS
.md-icon
  &.md-size-c
    width: 32px;
    min-width: 32px;
    height: 32px;
    font-size: 32px!important

// MD-DATEPICKER
.md-datepicker-dialog
  flex-flow: column nowrap
  .md-datepicker-header
    color: #ffffff!important
    .md-datepicker-dayname
      display inline!important
  .md-datepicker-body
    .md-datepicker-day-button.md-datepicker-selected
      color: #fff!important
    .md-dialog-actions.md-datepicker-body-footer
      .md-button
        color: $clblue

// City-State-ZIP in one row
.address-info
  display: flex
  flex-flow: row nowrap
  justify-content: space-between
  align-items: center
  div:nth-child(1)
    width: 49%
  div:nth-child(2)
    width: 20%
  div:nth-child(3)
    width: 29%

// SELECT MENU FIX
.md-select-menu.md-menu-content
  z-index 12

// MD-MENU
.md-menu-content.dialog-menu-content
  z-index 12
  .md-list-item-container
    color: $clblue
    text-align: right
    &:hover
      color: $clblue!important

// PLACEHOLDER MIXIN
mixin-placeholder(c)
  &::-webkit-input-placeholder
    color: c;
  &::-moz-placeholder
    color: c;
  &:-ms-input-placeholder
    color: c;
  &:-moz-placeholder
    color: c;

// STRIPE CARD OVERRIDE
.StripeElement
  background-color: white
  height: 40px
  padding: 10px 0px
  border-bottom: 1px solid rgba(0, 0, 0, 0.42)
  transition all ease 400ms
  margin: 4px 0 24px
  &.StripeElement--focus 
    border-bottom: 2px solid $ca1
    border-color: $ca1
  &.StripeElement--invalid 
    border-color: #fa755a
  &.StripeElement--webkit-autofill 
    background-color: #fefde5 !important


// TEXT
.centered
  text-align: center
.title
  color: $cgray1
  font-weight: 500
  font-size: 18px
.title-info
  color: $cgray2
  font-size: 13px
  line-height: 1.4
.bold
  font-weight: 500
.bolder
  font-weight: 600
.caption
  color: $cgray2
  font-size: 11px
  line-height: 1.4
  &.red
    color: $cred
.field-caption
  @extends .caption;
  margin-top: -18px
  margin-bottom: 15px
.number-big
  font-size: 22px
  font-weight: 600

// COLORS
.cred
  color $cred!important
.cblue
  color $cblue!important
.clblue
  color $clblue!important
.cgreen
  color $cgreen!important
.ca1
  color $ca1!important
.cgray
  color $cgray1!important

