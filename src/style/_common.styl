.md-app
  height 100vh
.md-drawer
  width: 255px
.md-app-scroller
.md-app-content
  background: #F5F5F5 !important
  border-left: none
  box-shadow:  inset 5px 0 5px -5px $cgray2
a, a:hover, a:visited, a:link, a:active, a > *
  text-decoration: none !important

.md-steppers
  .md-stepper-header
    .md-stepper-number
      background: $clblue !important
      color: #fff
    &.md-active
      .md-stepper-number
        color: #fff !important

.md-button-content
  text-transform: none
// Light Blue button
.md-button.md-accent.lblue
  color $clblue
  &.md-raised
    background-color $clblue !important

mixin-placeholder(c)
  &::-webkit-input-placeholder
    color: c;
  &::-moz-placeholder
    color: c;
  &:-ms-input-placeholder
    color: c;
  &:-moz-placeholder
    color: c;