.new-invoices-page
  @extends .padded-page;
  .common-player-info
    margin: 20px auto
  .cards
    display: flex
    flex-flow: row wrap
    justify-content: flex-start
    align-items: center
    .common-card
      width 250px
      margin-bottom: 32px
      .content
        display: flex
        flex-flow: row nowrap
        justify-content: space-between
        align-items: center
        margin: 30px 0 20px 0
        .md-icon
          margin: 0
          color: $cyellow
        .total
          color: $cyellow
          font-weight: 500
          font-size: 26px