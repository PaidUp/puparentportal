// TOP TOOLBAR COMPONENT
.top-toolbar
  width 100%
  display: flex
  flex-flow: row nowrap
  justify-content: space-between
  align-items: center
  .menu-icon
    display: none
    margin: 0
    .md-icon
      color: #fff!important
    @media $small-only
      display block
  .logo
    width: 50px
    img 
      width 100%
  .search-input
    color: #fff
    width 400px
    height 45px
    border-radius: $brs
    background: #5ECAB9
    display: flex
    flex-flow: row nowrap
    justify-content: flex-start
    align-items: center
    @media $small-only2
      height 38px
    @media $small-only
      display none
    .md-icon
      color: #fff !important
      margin: 0 12px
    input 
      background: transparent
      border: none 
      outline: none 
      height 100%
      width 100%
      mixin-placeholder(#fff)
  .logout-btn-top
    color: #fff!important
    @media $small-only
      display none
 

// LEFT SIDEBAR COMPONENT
.left-sidebar
  width: 100%
  height: 100%
  display: flex
  flex-flow: column nowrap
  justify-content: space-between
  align-items: flex-start
  .md-list-item-content>.md-icon:first-child
    margin-right: 10px
  .top-list
    overflow-y: auto
    width: 100%
    padding: 0px
    height 80%
    .edit-user-nav-item
      cursor pointer
      .md-list-item-text
        color: $cblue!important
    .md-list-item-expand
      border: none
    .md-list-item
      .md-icon
        color: $ca1
        svg
          fill: $ca1
        &.add-icon
          margin-right: 20px
          width: 36px
      .router-link-active
        background: $cgray4
        box-shadow: inset -3px 0 0 $ca1
        .md-list-item-text
          color: $ca1
      .md-list-item-text
        color: $cgray1
        .caption
          font-size: 13px
      .notification-number
        background: red
        color: #fff
        height 22px
        width 22px
        line-height: 22px
        text-align: center
        border-radius: 100%
        font-weight: bold
  .bottom-list
    width: 100%;
    border-top: 1px solid $cgray4
    height 20%
    padding: 0
    .md-list-item.logout-btn-nav
      display none
      @media $small-only
        display list-item

    .md-list-item
      .md-icon
        color: $cgray2
      .md-list-item-text
        color: $cgray2
 
// FILTERS RIGHT SIDEBAR
.filters-sidebar
  padding: 16px
  .title-section
    display: flex
    flex-flow: row nowrap
    justify-content: space-between
    align-items: center
    .md-button
      margin 0
  .filters-section
    margin-top: 20px
    .tags-box
      .md-chip
        margin: 0 4px 8px 0
        cursor pointer
    .filter-title
      display: flex
      flex-flow: row nowrap
      justify-content: flex-start
      align-items: center
      margin-top: 30px
    .md-checkbox 
      display: flex
    .range-date
      display: flex
      flex-flow: row nowrap
      justify-content: space-between
      align-items: center
      .md-field
        width: 48%
        margin 0
  