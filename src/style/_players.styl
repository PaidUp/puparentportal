.players-page
  .player
    text-align: center
    margin-top: 20px
  .player-empty
    margin-top: 60px
    text-align: center
    .md-button
      margin: 30px auto
  .player-with-payments  
    .details
      margin-top: 20px
    .invoices
      margin-top: 20px
      .cards-layout
        .main-card-box
          display: flex
          flex-flow: column nowrap
          justify-content: space-between
          align-items: flex-start
          width 100%
          .md-card-header
          .md-card-content
          .md-card-actions
            width 100%
          .md-card-header
            .title
              color: $cblack
              margin-bottom: 5px
          .md-card-content.card-content
            display: flex
            flex-flow: row nowrap
            justify-content: space-between
            align-items: center
            .status
              text-align: center
              .md-icon
                color: $cgreen
            .amount-details
              margin-top: 5px
              color: $cgray1
              text-align: right
              .details
                line-height: 1
              .total
                margin-top: 5px
                font-weight: bold
              
.add-new-player-page
  @extend .has-steppers;
  .step-box
    width 300px
    .update-pic
      display: flex
      flex-flow: column nowrap
      justify-content: center
      align-items: center
      padding: 16px 0
      cursor pointer
    .names-box
      display: flex
      flex-flow: row nowrap
      justify-content: space-between
      align-items: center
      margin-bottom: 20px
      width 100%
      div:first-child
        margin-right: 10px
  .club-search-field
    width 300px
  .clubs
    display: flex
    flex-flow: row wrap
    justify-content: flex-start
    align-items: center
    margin: 40px 0
    .club
      text-align: center
      width 250px
      padding: 20px 10px
      cursor pointer
      margin: 15px
      &.selected
        // border: 2px solid $cblue
        background: rgba($ca1,.2)
      img
        width 90px
        margin-bottom: 10px
      .location
        line-height: 1.2
        color: $cgray2
