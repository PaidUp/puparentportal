.players-page
  .player
    text-align: center
    margin-top: 20px
  .player-empty
    margin-top: 60px
    text-align: center
    .md-button
      margin: 30px auto
  .player-with-payments  
    .details,
    .invoices
      .title
        color: $cgray2
        margin-bottom: 10px
    .details
      .details-box
        display: flex
        flex-flow: row nowrap
        justify-content: space-between
        align-items: flex-start
        padding: 10px 16px 0 16px
      .details-selects
        width: 40%
        display: flex
        flex-flow: row nowrap
        justify-content: flex-start
        align-items: center
        .season-select
          width 250px
          margin-right: 20px
      .details-numbers
        width 50%
        margin-top: 4px
        display: flex
        flex-flow: row nowrap
        justify-content: flex-end
        align-items: center
        & > div:not(:last-child)
          margin-right: 20px
        .concept
          color: $cgray1
        .green
          color: $cgreen
        .gray
          color: $cgray1
        .red
          color: $cred
        .blue
          color: $cblue
    .invoices
      margin-top: 20px
      .inv-cards
        display: flex
        flex-flow: row wrap
        justify-content: space-between
        align-items: center
        .md-card
          margin: 0 0 30px 0
          width: 23%;
          .card-content
            display: flex
            flex-flow: row nowrap
            justify-content: space-between
            align-items: center
            .status
              text-align: center
              .md-icon
                color: $cgreen
            .amount-details
              margin-top: 5px
              color: $cgray1
              text-align: right
              .details
                line-height: 1
              .total
                margin-top: 5px
                font-weight: bold
              
.add-new-player-page
  @extend .has-steppers;
  .step-box
    width 300px
    .update-pic
      text-align: center
      width auto
      padding: 16px 0
      cursor pointer
    .names-box
      display: flex
      flex-flow: row nowrap
      justify-content: space-between
      align-items: center
      margin-bottom: 20px
      width 100%
      div:first-child
        margin-right: 10px
  .club-search-field
    width 300px
  .clubs
    display: flex
    flex-flow: row wrap
    justify-content: space-around
    align-items: center
    margin: 40px 0
    .club
      text-align: center
      width 280px
      padding: 20px 10px
      cursor pointer
      margin-bottom: 20px
      &.selected
        // border: 2px solid $cblue
        background: rgba($ca1,.2)
      img
        width 90px
        margin-bottom: 10px
      .location
        line-height: 1.2
        color: $cgray2
