.players-page
  .player
    text-align: center
    margin-top: 20px
  .player-empty
    margin-top: 60px
    text-align: center
    .md-button
      margin: 30px auto
  .player-with-payments  
    .details
      margin-top: 20px
    .invoices
      margin-top: 20px
              
.add-new-player-page
  @extend .has-steppers;
  .step-box
    width 300px
    .update-pic
      display: flex
      flex-flow: column nowrap
      justify-content: center
      align-items: center
      padding: 16px 0
      cursor pointer
    .names-box
      display: flex
      flex-flow: row nowrap
      justify-content: space-between
      align-items: center
      margin-bottom: 20px
      width 100%
      div:first-child
        margin-right: 10px
  .club-search-field
    width 300px
  .clubs
    display: flex
    flex-flow: row wrap
    justify-content: flex-start
    align-items: center
    margin: 40px 0
    .club
      text-align: center
      width 250px
      padding: 20px 10px
      cursor pointer
      margin: 15px
      &.selected
        // border: 2px solid $cblue
        background: rgba($ca1,.2)
      img
        width 90px
        margin-bottom: 10px
      .location
        line-height: 1.2
        color: $cgray2
