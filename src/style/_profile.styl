.profile-page
  @extends .margined-page;
  background: #fff
  height 100%
  width 100%
  position relative
  .main-box
    height 100%
    overflow: auto
    padding: 20px 0
    display: flex
    flex-flow: row nowrap
    justify-content: center
    align-items: center
    @media $small-only
      padding: 20px!important
    .title
      position: absolute
      top: 20px
      left 20px
      color: $cgray1
    .content-box
      width: 400px
      @media $small-only
        width 100%
      .update-btn
        margin: 10px auto 30px auto
        display: block
      .names-box
        display: flex
        flex-flow: row nowrap
        justify-content: space-between
        align-items: center
        width 100%
        @media $small-only
          flex-flow: column nowrap
        div:first-child
          margin-right: 10px
          @media $small-only
            margin-right: 0px
      .fb-icon
        width 28px
        height 28px
        border-radius: 3px
      .actions-box
        text-align: right
        margin-bottom: 20px
      .upgrade-box
        color: $cgray1
        .upgrade-btn
          width 100%
          display block
          margin: 15px auto 0 auto
      .md-field span .md-icon
        justify-content: flex-start!important
