// We are going to use Material Design CSS so all values taken from there
.md-app
  height 100vh
.top-toolbar
  width: 100%
  display: flex
  flex-flow: row nowrap
  justify-content: space-between
  align-items: center
  .logo
    width: 50px
  .search-input
    width: 40%
    color: #fff
    label,
    input
      -webkit-text-fill-color #fff !important
      color #fff
    &:after
      background-color: #fff
  .user-menu
    .md-button
      height 46px
.md-drawer.left-nav
  width: 245px
  display: flex
  flex-flow: column nowrap
  justify-content: space-between
  align-items: flex-start
  .md-list-item-content>.md-icon:first-child
    margin-right: 20px